<!-- Main sidebar -->
<div class="sidebar sidebar-main sidebar-fixed">
    <div class="sidebar-content">

        <!-- User menu -->
        <div class="sidebar-user">
            <div class="category-content">
                <div class="media">
                    <a href="#" class="media-left"><img src="{{ asset('assets/images/placeholder.jpg') }}"
                                                        class="img-circle img-sm" alt=""></a>
                    <div class="media-body">
                        <span class="media-heading text-semibold">
                            {% if is_granted("ROLE_ADMIN") %}
                                {{ app.user.username }}
                            {% endif %}
                        </span>
                        <!--div class="text-size-mini text-muted">
                            <i class="icon-pin text-size-small"></i> &nbsp;Santa Ana, CA
                        </div-->
                    </div>

                    <div class="media-right media-middle">
                        <ul class="icons-list">
                            <li>
                                <a href="#"><i class="icon-cog3"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /user menu -->


        <!-- Main navigation -->
        <div class="sidebar-category sidebar-category-visible">
            <div class="category-content no-padding">
                <ul class="navigation navigation-main navigation-accordion">

                    <!-- Main -->
                    <li class="navigation-header"><span>Main</span> <i class="icon-menu" title="Main pages"></i></li>
                    <li class="{% if app.request.attributes.get('_route') in ['dashboard'] %}active{% endif %}"><a
                                href="{{ path('dashboard') }}"><i class="icon-home4"></i> <span>Dashboard</span></a>
                    </li>

                    <li class="{% if app.request.attributes.get('_route') in ['article_index','category_index','subcategory_index','family_index','category_edit'] %}active{% endif %}">
                        <a href="{{ path('article_index') }}"><i class="icon-stack2"></i>
                            <span>Gestion des articles</span></a>
                        <ul>
                            <li><a href="{{ path('article_index') }}">Articles</a></li>
                            <li><a href="{{ path('category_index') }}">Categories</a></li>
                        </ul>
                    </li>
                    {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN') %}
                        <li class="{% if app.request.attributes.get('_route') in ['orders_index','orders_show'] %}active{% endif %}">
                            <a href="{{ path('orders_index') }}"><i class="icon-stack"></i>
                                <span>Gestion des commandes</span></a>
                        </li>
                    {% endif %}

                    {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN') %}
                        <li class="{% if app.request.attributes.get('_route') in ['user_index','cansulardnumberlist_index'] %}active{% endif %}">
                            <a href="{{ path('user_index') }}"><i class="icon-people"></i>
                                <span>Gestion des clients</span></a>
                            <ul>
                                <li><a href="{{ path('user_index') }}">Clients</a></li>
                            </ul>
                        </li>

                    {% endif %}

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <li class="{% if app.request.attributes.get('_route') in ['user_employee','fos_user_group_list'] %}active{% endif %}">
                            <a href="#"><i class="icon-user"></i> <span>Gestion d'accés</span></a>
                            <ul>
                                <li><a href="{{ path('user_employee') }}">Listes des administrateurs</a></li>
                                <li><a href="{{ path('fos_user_group_list') }}">Groupes</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    <!-- /main -->

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <li class="{% if app.request.attributes.get('_route') in ['unity_index','paymentmethod_index','orderstatus_index','country_index','brand_index'] %}active{% endif %}">
                            <a href="#"><i class="icon-wrench3"></i> <span>Paramètres</span></a>
                            <ul>
                                <li><a href="{{ path('brand_index') }}">Fabricants</a></li>
                            </ul>
                        </li>
                    {% endif %}


                </ul>
            </div>
        </div>

        <!-- /main navigation -->

    </div>
</div>
<!-- /main sidebar -->