
{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <form class="form-horizontal form-validate-jquery" method="post" enctype="multipart/form-data">
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">{% if user.id is null %}Ajouter{% else %}Modifier{% endif %}
                        l'utilisateur</h5>

                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-6">
                            <fieldset>
                                <legend class="text-semibold"><i class="icon-reading position-left"></i>Informations de compte
                                </legend>

                                <div class="form-group">
                                    {{ form_label(form.firstName,null,
                                    {'label':'Nom ','label_attr':{'class':'col-lg-3 control-label required'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.firstName, { 'attr': {'class': 'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.lastName,null,
                                    {'label':'Prénom','label_attr':{'class':'col-lg-3 control-label required'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.lastName, { 'attr': {'class': 'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.email,null,
                                    {'label':'E mail','label_attr':{'class':'col-lg-3 control-label required'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.email, { 'attr': {'class': 'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.phone,null,
                                    {'label':'Téléphone','label_attr':{'class':'col-lg-3 control-label required'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.phone, { 'attr': {'class': 'form-control','required':'required'}}) }}
                                    </div>
                                </div>

                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <legend class="text-semibold"><i class="icon-reading position-left"></i>Roles et status
                                </legend>
                                <div class="form-group">
                                    <div class="col-lg-9">
                                        <div class="checkbox">
                                            {{ form_label(form.isBanned,null,
                                            {'label':'Bloqué'}) }}

                                            {{ form_widget(form.isBanned,{'attr':{'class':'styled'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-9">
                                        <div class="checkbox">
                                            {{ form_label(form.isFake,null,
                                            {'label':'Spam'}) }}

                                            {{ form_widget(form.isFake,{'attr':{'class':'styled'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-9">
                                        <div class="checkbox">
                                            {{ form_label(form.subscribed,null,
                                            {'label':'Inscrit'}) }}

                                            {{ form_widget(form.subscribed,{'attr':{'class':'styled'}}) }}
                                        </div>
                                    </div>
                                </div>


                                {{ form_rest(form) }}
                            </fieldset>
                        </div>


                    </div>

                    <div class="text-right">
                        <input type="submit"
                               value="{% if user.id is null %}Créer{% else %}Modifier{% endif %} l'utilsateur"
                               class="btn btn-primary"/>

                    </div>

                </div>
            </div>
        </form>
    </div>

{% endblock %}