{% extends 'base.html.twig' %}

{% block body %}
    <h1>Orderitem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orderItem.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ orderItem.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ orderItem.type }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ orderItem.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ orderItem.quantity }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ orderItem.amount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ orderItem.status }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ orderItem.object }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('orderitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('orderitem_edit', { 'id': orderItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
