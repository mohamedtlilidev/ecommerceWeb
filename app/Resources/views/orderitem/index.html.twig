{% extends 'base.html.twig' %}

{% block body %}
    <h1>Orderitems list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Object</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orderItem in orderItems %}
            <tr>
                <td><a href="{{ path('orderitem_show', { 'id': orderItem.id }) }}">{{ orderItem.id }}</a></td>
                <td>{{ orderItem.title }}</td>
                <td>{{ orderItem.type }}</td>
                <td>{{ orderItem.price }}</td>
                <td>{{ orderItem.quantity }}</td>
                <td>{{ orderItem.amount }}</td>
                <td>{{ orderItem.status }}</td>
                <td>{{ orderItem.object }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('orderitem_show', { 'id': orderItem.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('orderitem_edit', { 'id': orderItem.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('orderitem_new') }}">Create a new orderItem</a>
        </li>
    </ul>
{% endblock %}
