{% extends 'base.html.twig' %}

{% block body %}
    {#}{ form_start(form) }}
           {{ form_widget(form) }}
            <input type="submit" value="Ajouter" />
    {{ form_end(form) }#}
    <div class="content">
        <form class="form-horizontal form-validate-jquery" method="post" enctype="multipart/form-data">
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">Ajouter une category</h5>

                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <fieldset>
                                <legend class="text-semibold"><i class="icon-reading position-left"></i>Champs à remplir
                                </legend>

                                <div class="form-group">
                                    {{ form_label(form.nameFr,null,
                                    {'label':'Nom en Français','label_attr':{'class':'col-lg-3 control-label'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.nameFr, { 'attr': {'class': 'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.nameEn,null,
                                    {'label':'Nom en anglais','label_attr':{'class':'col-lg-3 control-label'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.nameEn, { 'attr': {'class': 'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <span class="validation-error-label">{{ form_errors(form.bgPicture) }}</span>
                                    {{ form_label(form.bgPicture,null,
                                    {'label':'Image associé (png, gif et jpeg (870X140px))','label_attr':{'class':'col-lg-3 control-label'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.bgPicture, { 'attr': {'class': 'file-styled'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-3">
                                        <div class="checkbox">
                                            {{ form_label(form.isPublished,null,
                                            {'label':'Active'}) }}
                                            {{ form_widget(form.isPublished,{'attr':{'class':'styled','checked':'checked'}}) }}
                                        </div>
                                    </div>


                                </div>



                            </fieldset>
                        </div>


                    </div>
                    {{ form_rest(form) }}
                    <div class="text-right">
                        <input type="submit" value="Créer la category" class="btn btn-primary"/>

                    </div>

                </div>
            </div>
        </form>
    </div>

{% endblock %}