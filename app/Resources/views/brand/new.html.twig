{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <form class="form-horizontal form-validate-jquery" method="post" enctype="multipart/form-data">
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">{% if brand.id is null %}Ajouter{% else %}Modifier{% endif %} une
                        marque</h5>

                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <fieldset>
                                <legend class="text-semibold"><i class="icon-reading position-left"></i>Champs à remplir
                                </legend>

                                <div class="form-group">
                                    {{ form_label(form.brand,null,
                                    {'label':'Nom','label_attr':{'class':'col-lg-3 control-label'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.brand, { 'attr': {'class': 'form-control','required':'required'}}) }}
                                    </div>
                                </div>

                            </fieldset>
                        </div>


                    </div>
                    {{ form_rest(form) }}
                    <div class="text-right">
                        <input type="submit"
                               value="{% if brand.id is null %}Créer{% else %}Modifier{% endif %} la marque"
                               class="btn btn-primary"/>

                    </div>

                </div>
            </div>
        </form>
    </div>

{% endblock %}