{% import "macros/scripts.html.twig" as scripts %}
<form class="form-horizontal" id="form_add_brand" method="post" action="{{ path('brand_ajax_new') }}" enctype="multipart/form-data">
    <div class="panel panel-flat">
        <div class="panel-heading">

        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-md-12">
                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.brand,null,
                            {'label':'Brand','label_attr':{'class':'col-lg-3 control-label'}}) }}
                            <div class="col-lg-9">
                                {{ form_widget(form.brand, { 'attr': {'class': 'form-control','required':'required'}}) }}
                            </div>
                        </div>

                    </fieldset>
                </div>


            </div>
            {{ form_rest(form) }}
            <div class="text-right">
                <input type="submit"
                       value="{% if brand.id is null %}CrÃ©er{% else %}Modifier{% endif %} la marque"
                       class="btn btn-primary"/>

            </div>

        </div>
    </div>
</form>
{{ scripts.jqueryValidateFrom('#form_add_brand') }}