            <button type="submit" class="btn bg-blue btn-block">{{ 'resetting.request.submit'|trans }}<i
                        class="icon-arrow-right14 position-right"></i></button>

        </div>
        <div class="form-group login-options">
            <div class="row">
                <div class="col-sm-12  text-center">
                    <a href="{{ path('fos_user_security_login') }}">Retour</a>
                </div>
            </div>
        </div>

    </form>
</div>

