{% trans_default_domain 'FOSUserBundle' %}

{% extends 'base.html.twig' %}

{% block body %}

    <div class="content">
        <form class="form-horizontal form-validate-jquery"  method="post" enctype="multipart/form-data">
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">Ajouter un groupe </h5>

                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <fieldset>
                                <legend class="text-semibold"><i class="icon-reading position-left"></i>Champs à remplir</legend>
                                <div class="form-group">
                                    {{ form_label(form.name,null,
                                    {'label':'Nom du groupe','label_attr':{'class':'col-lg-3 control-label'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.name, { 'attr': {'class': 'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.description,null,
                                    {'label':'Description','label_attr':{'class':'col-lg-3 control-label'}}) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.description, { 'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.roles,null,
                                    {'label':'Roles','label_attr':{'class':'col-lg-3 control-label'}}) }}
                                    <div class="col-lg-9" id="roles_group">
                                        {{ form_widget(form.roles, { 'attr': {'class': 'form-control multiple_select_group','required':'required'}}) }}
                                    </div>
                                </div>

                            </fieldset>
                        </div>


                    </div>
                    {{ form_rest(form) }}
                    <div class="text-right">
                        <input type="submit" value="Créer le groupe" class="btn btn-primary"/>
                    </div>

                </div>
            </div>
        </form>
    </div>
{% endblock %}