{% extends 'base.html.twig' %}

{% block body %}
    <!-- Main content -->
    <div class="content-wrapper">
        <!-- Page header -->
        <div class="page-header">
            <div class="page-header-content">
                <div class="page-title">
                    <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Groupes</span> -
                        Liste</h4>
                </div>
            </div>
            <div class="breadcrumb-line">
                <ul class="breadcrumb">
                    <li><a href="index.html"><i class="icon-home2 position-left"></i> Home</a></li>
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Groupes</li>
                </ul>
            </div>
        </div>
        <!-- /page header -->
        <!-- Content area -->
        <div class="content">
            {% include 'messages.html.twig' %}
            <!-- Basic initialization -->
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">Liste des groupes</h5>
                    <div class="heading-elements">
                        <ul class="icons-list">
                            <li>
                                <a class="btn border-teal text-teal btn-flat btn-rounded btn-icon btn-xs valign-text-bottom"
                                   href="{{ path('fos_user_group_new') }}" title="Ajouter un nouveau Groupe"><i
                                            class="icon-plus3"></i></a>
                            </li>
                            <!--li><a data-action="reload"></a></li-->
                        </ul>
                    </div>
                </div>
                <table class="table datatable-row-full">
                    <thead>
                    <tr>
                        <th class="text-center">id</th>
                        <th class="text-center">Nom</th>
                        <th class="text-center">Roles</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td class="text-center">{{ group.id }}</td>
                            <td class="text-center user_name">{{ group.name }}</td>

                            <td class="text-center">
                                {% for role in group.roles %}
                                    <span class="label label-info">{{ role }}</span>
                                {% endfor %}
                            </td>
                            <td class="text-center">

                                <ul class="icons-list icons-list-extended text-nowrap">

                                    <li><a href="#" data-popup="tooltip" title="Supprimer" data-toggle="modal"
                                           data-target="#deleteModal"
                                           data-path-delete="{{ path('fos_user_group_delete', {'groupName': group.id }) }}"
                                           data-name-item="{{ group.name }}"><i
                                                    class="icon-cross2 text-danger"></i></a></li>

                                    <li><a href="{{ path('fos_user_group_edit', {'groupName': group.id }) }}"
                                           title="Edit"><i
                                                    class="icon-file-text2"></i></a></li>
                                    <!--li><a href="#" data-popup="tooltip" title="Video" data-toggle="modal" data-target="#video"><i class="icon-video-camera"></i></a></li-->
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /basic initialization -->
            <div class="modal fade" id="deleteModal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Supprimer le groupe</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Etes vous sure de bien vouloir supprimer ce groupe ?</p>
                        </div>
                        <div class="modal-footer">
                            <a id="deleteAction" type="button" class="btn btn-danger">Valider</a>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
            {% include 'footer.html.twig' %}
        </div>
        <!-- /content area -->
    </div>
    <!-- /main content -->
{% endblock %}
